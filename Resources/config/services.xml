<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="nilead.menu_builder.frontend.class">Nilead\WebBundle\Menu\FrontendMenuBuilder</parameter>
        <parameter key="nilead.menu_builder.backend.class">Nilead\WebBundle\Menu\BackendMenuBuilder</parameter>
    </parameters>

    <services>
        <service id="nilead.menu_builder.frontend" class="%nilead.menu_builder.frontend.class%">
            <argument type="service" id="knp_menu.factory"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="translator"/>
        </service>

        <service id="nilead.menu.frontend.account" class="Knp\Menu\MenuItem" factory-service="nilead.menu_builder.frontend" factory-method="createUserAccountMenu" scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="sylius.frontend.account" />
        </service>
    </services>
</container>
