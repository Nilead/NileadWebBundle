<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <import resource="@NileadWebBundle/Resources/config/routing/frontend/account.xml" prefix="account"/>

    <route id="index" path="/">
        <default key="_controller">NileadCoreBundle:MyTest:index</default>
    </route>

    <route id="product_listing" path="/category/{slug}/{page}">
        <default key="_controller">NileadCoreBundle:MyTest:productListing</default>
        <default key="page">1</default>
        <requirement key="page">\d+</requirement>
    </route>

</routes>
