<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="nilead.backend.customer.index" path="/{page}">
        <default key="_controller">NileadCoreBundle:Customer:list</default>
        <default key="page">1</default>
        <requirement key="page">\d+</requirement>
    </route>

    <route id="nilead.backend.customer.show" path="/{id}/show">
        <default key="_controller">NileadCoreBundle:Customer:show</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="nilead.backend.customer.edit" path="/{id}/edit">
        <default key="_controller">NileadCoreBundle:Customer:edit</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="nilead.backend.customer.create" path="/create">
        <default key="_controller">NileadCoreBundle:Customer:create</default>
    </route>

    <route id="nilead.backend.customer.change_password" path="/{id}/edit/change_password">
        <default key="_controller">NileadCoreBundle:Customer:changePassword</default>
        <requirement key="id">\d+</requirement>
    </route>

</routes>
