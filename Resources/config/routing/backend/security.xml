<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_login" path="/login">
        <default key="_controller">NileadCoreBundle:Security\Security:login</default>
    </route>

    <route id="admin_check" path="/login_check">
        <default key="_controller">NileadCoreBundle:Security\Security:check</default>
    </route>

    <route id="admin_logout" path="/logout">
        <default key="_controller">NileadCoreBundle:Security\Security:logout</default>
    </route>

</routes>