<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="nilead.backend.dashboard.index" path="/">
        <default key="_controller">NileadCoreBundle:Backend/Dashboard:index</default>
    </route>

    <!-- Taxonomy & Taxonomies -->
    <import resource="@NileadWebBundle/Resources/config/routing/backend/taxonomy.xml" prefix="taxonomy" />
    <import resource="@NileadWebBundle/Resources/config/routing/backend/taxonomies.xml" prefix="taxonomies" />

    <!-- Taxon & Taxons -->
    <import resource="@NileadWebBundle/Resources/config/routing/backend/taxon.xml" prefix="taxon" />
    <import resource="@NileadWebBundle/Resources/config/routing/backend/taxons.xml" prefix="taxons" />

    <!-- Navigation -->
    <import resource="@NileadWebBundle/Resources/config/routing/backend/navigation.xml" prefix="navigation" />


    <!-- <import resource="@NileadWebBundle/Resources/config/routing/backend/shipment.xml" prefix="/shipment"/> -->

    <import resource="@NileadWebBundle/Resources/config/routing/backend/security.xml"/>

    <import resource="@NileadWebBundle/Resources/config/routing/backend/customer.xml" prefix="/customer"/>

    <import resource="@NileadSettingsBundle/Resources/config/routing.xml" prefix="/settings"/>
</routes>
