<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- Item Create -->
    <route id="nilead.backend.taxonomy.create" path="/create" methods="GET">
        <default key="_controller">NileadCoreBundle:Backend/Taxonomy:create</default>
    </route>

    <!-- Item Create Process -->
    <route id="nilead.backend.taxonomy.store" path="/" methods="POST">
        <default key="_controller">NileadCoreBundle:Backend/Taxonomy:store</default>
    </route>

    <!-- Item Show -->
    <route id="nilead.backend.taxonomy.show" path="/{id}" methods="GET">
        <default key="_controller">NileadCoreBundle:Backend/Taxonomy:show</default>
        <requirement key="id">\d+</requirement>
    </route>

    <!-- Item Edit -->
    <route id="nilead.backend.taxonomy.edit" path="/{id}/edit" methods="GET">
        <default key="_controller">NileadCoreBundle:Backend/Taxonomy:edit</default>
        <requirement key="id">\d+</requirement>
    </route>

    <!-- Item Update / Edit Process -->
    <route id="nilead.backend.taxonomy.update" path="/{id}" methods="PUT">
        <default key="_controller">NileadCoreBundle:Backend/Taxonomy:update</default>
        <requirement key="id">\d+</requirement>
    </route>

    <!-- Item Delete -->
    <route id="nilead.backend.taxonomy.delete" path="/{id}" methods="DELETE">
        <default key="_controller">NileadCoreBundle:Backend/Taxonomy:delete</default>
        <requirement key="id">\d+</requirement>
    </route>

    <!-- Reorder Items -->
    <route id="nilead.backend.taxonomy.reorder" path="/reorder" methods="POST">
        <default key="_controller">NileadCoreBundle:Backend/Taxonomy:reorder</default>
    </route>
</routes>